# Datenbank (Railway generiert automatisch)
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret Key (min. 32 Zeichen)
# Generiere mit: python3 generate_secrets.py
# Oder: openssl rand -hex 32
JWT_SECRET_KEY=dein-jwt-secret-key-min-32-zeichen

# Encryption Key (Fernet Key, base64)
# Generiere mit: python3 generate_secrets.py
# Oder: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=dein-encryption-key-base64-encoded

# Telegram API Credentials
# Erhalte diese von https://my.telegram.org/apps
# 1. Logge dich mit deiner Telefonnummer ein
# 2. Erstelle eine neue App
# 3. Kopiere API ID und API Hash
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890

# Optional: Telegram Session (für lokale Entwicklung)
TELEGRAM_PHONE_NUMBER=+491234567890
TELEGRAM_SESSION_NAME=spam_session

